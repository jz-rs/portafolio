<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane fx:id="registroPane" xmlns:fx="http://javafx.com/fxml" fx:controller="com.mycompany.clinicaprivadadoo.controlador.RegistroPacienteController" stylesheets="@/com/mycompany/clinicaprivadadoo/styles.css">
    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
    <Label text="Registrar Nuevo Paciente" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
    <Label text="DNI:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="dniTextField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    <Label text="Nombre:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="nombreTextField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    <Label text="Apellido:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <TextField fx:id="apellidoTextField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    <Label text="Fecha de Nacimiento:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <TextField fx:id="fechaNacTextField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
    <Label text="N° de Historia Clínica:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
    <TextField fx:id="historiaClinicaTextField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
    <Label text="Calle:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
    <TextField fx:id="calleTextField" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
    <Label text="Número:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
    <TextField fx:id="numeroTextField" GridPane.rowIndex="7" GridPane.columnIndex="1"/>
    <Label text="Barrio:" GridPane.rowIndex="8" GridPane.columnIndex="0"/>
    <TextField fx:id="barrioTextField" GridPane.rowIndex="8" GridPane.columnIndex="1"/>
    <Label text="Piso:" GridPane.rowIndex="9" GridPane.columnIndex="0"/>
    <TextField fx:id="pisoTextField" GridPane.rowIndex="9" GridPane.columnIndex="1"/>
    <Label text="Departamento:" GridPane.rowIndex="10" GridPane.columnIndex="0"/>
    <TextField fx:id="departamentoTextField" GridPane.rowIndex="10" GridPane.columnIndex="1"/>
    <Label text="Código Postal:" GridPane.rowIndex="11" GridPane.columnIndex="0"/>
    <TextField fx:id="codigoPostalTextField" GridPane.rowIndex="11" GridPane.columnIndex="1"/>
    <Label text="DNI Jefe de Grupo Familiar:" GridPane.rowIndex="12" GridPane.columnIndex="0"/>
    <TextField fx:id="jefeGrupoFamiliarTextField" GridPane.rowIndex="12" GridPane.columnIndex="1"/>

    <Button text="Registrar" onAction="#registrar" GridPane.rowIndex="13" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
    <Label fx:id="resultLabel" GridPane.rowIndex="14" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
</GridPane>




